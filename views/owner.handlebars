<nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" id="nav-logo-container" href="/"><img src="/images/property-pal-logo-horiz.png"></a>
</nav>

<section class="container white-bg-container">
    <div class="row justify-content-md-center">
        <div class="col-12">
            <hr>
            <h1>OWNER'S PAGE</h1>
            <h2>Welcome back {{owner.firstName}} {{owner.lastName}}!</h2>
            <p>Here the owner can see his-her properties.</p>
        </div>
    </div>
    <hr>
    <div class="card" style="width: 30rem;">
        <div class="card-body">
            <h5 class="card-title">Account info</h5>
            <p class="card-text">Username: <b>{{owner.username}}</b></p>
            <p class="card-text">Password: <b>{{owner.password}}</b></p>
            <p class="card-text">First name: <b>{{owner.firstName}}</b></p>
            <p class="card-text">Last name: <b>{{owner.lastName}}</b></p>
            <p class="card-text">Email: <b>{{owner.email}}</b></p>
            <p class="card-text">Phone: <b>{{owner.phone}}</b></p>
            <p class="card-text">Address: <b>{{owner.address1}} {{owner.address2}}, {{owner.city}},
                    {{owner.province}}, {{owner.country}}</b></p>
        </div>
    </div>
    <hr>
    <div>
        <a href="/owner/edit/{{owner.id}}"><button type="button" class="btn btn-primary">EDIT OWNER'S INFO</button></a>
        <a href="/property/add/{{owner.id}}"><button type="button" class="btn btn-primary">ADD NEW PROPERTY</button></a>
    </div>
    <hr>
    <div class="alert alert-success" role="alert">
        Here are your {{properties.count}} properties
    </div>
    {{#each properties.rows}}
    <div class="row justify-content-md-center">
        <div class="card" style="width: 100%;">
            <div class="card-body">
                <h5 class="card-title inline">ID: {{id}}</h5>
                <p class="card-text"><b>info:</b> {{info}}</p>
                <p class="card-text"><b>address1:</b> {{address1}}</p>
                <p class="card-text"><b>address2:</b> {{address2}}</p>
                <p class="card-text"><b>postalcode:</b> {{postalcode}}</p>
                <p class="card-text"><b>propertype:</b> {{propertype}}</p>
                <p class="card-text"><b>price_string:</b> {{price_string}}</p>
                <p class="card-text"><b>price_dec:</b> {{price_dec}}</p>
                <p class="card-text"><b>bedrooms:</b> {{bedrooms}}</p>
                <p class="card-text"><b>bathrooms:</b> {{bathrooms}}</p>
                <p class="card-text"><b>ownershiptype:</b> {{ownershiptype}}</p>
                <p class="card-text"><b>ammenities:</b> {{ammenities}}</p>
                <p class="card-text"><b>ammenitiesnearby:</b> {{ammenitiesnearby}}</p>
                <p class="card-text"> <img src="{{photo}}" style="width: 200px" alt="Property photo">
                </p>
                <p class="card-text"><small>createdAt: {{createdAt}}</small></p>
                <p class="card-text"><small>updatedAt: {{updatedAt}}</small></p>
                <a href="/property/edit/{{id}}"><button type="button" class="btn btn-success">EDIT</button></a>
                <button type="button" class="btn btn-danger deleteProperty" data-tag="{{id}}">DELETE</button>
            </div>
        </div>
    </div>
    {{/each}}
</section>
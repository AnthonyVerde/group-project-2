<section class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-auto">
            <hr>
            <h1>OWNER's PAGE</h1>
            <h2>Welcome back {{owner.firstName}} {{owner.lastName}}!</h2>
            <p>Here the owner can see his-her properties.</p>
        </div>
    </div>
    <hr>
    <div class="card" style="width: 100%;">
        <div class="card-body">
            <h5 class="card-title">Edi account info</h5>
            <p class="card-text">username: <input class="form-control mr-sm-2" type="text" id="propInputUsername" value="{{owner.username}}"></p>
            <p class="card-text">password: <input class="form-control mr-sm-2" type="text" id="propInputPassword" value="{{owner.password}}"></p>
            <p class="card-text">firstName: <input class="form-control mr-sm-2" type="text" id="propInputfirstName" value="{{owner.firstName}}"></p>
            <p class="card-text">lastName: <input class="form-control mr-sm-2" type="text" id="propInputLastName" value="{{owner.lastName}}"></p>
            <p class="card-text">email: <input class="form-control mr-sm-2" type="text" id="propInputEmail" value="{{owner.email}}"></p>
            <p class="card-text">phone: <input class="form-control mr-sm-2" type="text" id="propInputPhone" value="{{owner.phone}}"></p>
            <p class="card-text">address1: <input class="form-control mr-sm-2" type="text" id="propInputAddress1" value="{{owner.address1}}"></p>
            <p class="card-text">address2: <input class="form-control mr-sm-2" type="text" id="propInputAddress2" value="{{owner.address2}}"></p>
            <p class="card-text">city: <input class="form-control mr-sm-2" type="text" id="propInputCity" value="{{owner.city}}"></p>
            <p class="card-text">province: <input class="form-control mr-sm-2" type="text" id="propInputProvince" value="{{owner.province}}"></p>
            <p class="card-text">country: <input class="form-control mr-sm-2" type="text" id="propInputCountry" value="{{owner.country}}"></p>
            <small>Owner ID: <span id="idtag" data-tag="{{owner.id}}">{{owner.id}}</span></small>
        </div>
    </div>
    <hr>
    <div>
        <button class="btn btn-success my-2 my-sm-0" type="button" id="updateOwner">UPDATE</button>
        <a href="/owner/{{owner.id}}"><button type="button" class="btn btn-danger">CANCEL</button></a>
    </div>
    <hr>
</section>
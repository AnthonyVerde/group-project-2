<section class="container white-bg-container">
    <div class="row justify-content-md-center">
        <div class="col-12">
            <hr>
            <h1>Create NEW property for owner {{owner.firstName}} {{owner.lastName}} (ID# <span id="idtag" data-tag="{{owner.id}}">{{owner.id}}</span>)</h1>
        </div>
    </div>
    <hr>
    <div class="row justify-content-md-center">

        <div class="card" style="width: 100%;">
            <div class="card-body">
                {{!-- <h5 class="card-title">Editing property ID:
                    <input class="form-control mr-sm-2" type="text" aria-label="Search" id="propertyInfo">
                    {{property.id}}</h5> --}}
                {{!-- <h5 class="card-title inline">ID: <span id="idtag" data-tag="{{owner.id}}">{{owner.id}}</span></h5> --}}
                <p class="card-text"><b>info: </b><textarea class="form-control" rows="5"
                        id="propInputInfo">{{property.info}}</textarea></p>
                <p class="card-text"><b>address1: </b><input class="form-control mr-sm-2" type="text"
                        id="propInputAddress1" value="{{property.address1}}"></p>
                <p class="card-text"><b>address2: </b><input class="form-control mr-sm-2" type="text"
                        id="propInputAddress2" value="{{property.address2}}"></p>
                <p class="card-text"><b>postalcode: </b><input class="form-control mr-sm-2" type="text"
                        id="propInputPostalCode" value="{{property.postalcode}}"></p>
                <p class="card-text"><b>propertype: </b><input class="form-control mr-sm-2" type="text"
                        id="propInputProperType" value="{{property.propertype}}"></p>
                <p class="card-text"><b>price_string: </b><input class="form-control mr-sm-2" type="text"
                        id="propInputPrice_string" value="{{property.price_string}}"></p>
                <p class="card-text"><b>price_dec: </b><input class="form-control mr-sm-2" type="text"
                        id="propInputPrice_dec" value="{{property.price_dec}}"></p>
                <p class="card-text"><b>bedrooms: </b><input class="form-control mr-sm-2" type="text"
                        id="propInputBedrooms" value="{{property.bedrooms}}"></p>
                <p class="card-text"><b>bathrooms: </b><input class="form-control mr-sm-2" type="text"
                        id="propInputBathrooms" value="{{property.bathrooms}}"></p>
                <p class="card-text"><b>ownershiptype: </b><input class="form-control mr-sm-2" type="text"
                        id="propInputOwnershipType" value="{{property.ownershiptype}}"></p>
                <p class="card-text"><b>ammenities: </b><input class="form-control mr-sm-2" type="text"
                        id="propInputAmmenities" value="{{property.ammenities}}"></p>
                <p class="card-text"><b>ammenitiesnearby: </b><input class="form-control mr-sm-2" type="text"
                        id="propInputAmmenitiesNearby" value="{{property.ammenitiesnearby}}"></p>
                <p class="card-text"><b>photo: </b><input class="form-control mr-sm-2" type="text" id="propInputPhoto"
                        value="{{property.photo}}"></p>
            </div>
            <hr>
        </div>

        <button class="btn btn-success my-2 my-sm-0" type="button" id="addProperty">ADD PROPERTY</button>
        {{!-- <a href="/property/{{property.id}}"><button type="button" class="btn btn-warning" id="updateProperty">UPDATE</button></a> --}}
        {{!-- <a href="/property/{{property.id}}"><button type="button" class="btn btn-danger">CANCEL</button></a> --}}
    </div>
    <hr>


</section>